#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

LOCALES_DIR = $(CURDIR)/debian/semplice-utilities/usr/share/locale

%:
	dh $@ --with python2

override_dh_auto_install:
	python setup.py install --root=debian/semplice-utilities --install-layout=deb --install-scripts=/usr/bin

	ln -s /usr/bin/smxi debian/semplice-utilities/usr/bin/inxi
	ln -s /usr/bin/smxi debian/semplice-utilities/usr/bin/sgfxi
	ln -s /usr/bin/smxi debian/semplice-utilities/usr/bin/svmi

	# Borrowed from clamtk source package, thank you all
	@echo Installing locales now...
	for locale in $(shell ls $(CURDIR)/lang/semplice-utilities/*.mo | sed 's@.*/\(.*\)\.mo@\1@g'); \
		do mkdir -p $(LOCALES_DIR)/$$locale/LC_MESSAGES/ && \
		install -m 644 $(CURDIR)/lang/semplice-utilities/$$locale.mo $(LOCALES_DIR)/$$locale/LC_MESSAGES/semplice-utilities.mo; \
	done
	-rm -rf $(LOCALES_DIR)/semplice-utilities/

override_dh_auto_build:
